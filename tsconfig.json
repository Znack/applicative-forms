{
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "rootDir": "src",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
